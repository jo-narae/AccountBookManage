<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
 
    <definition name="layout" template="/WEB-INF/tiles/layout/layout.jsp" />
 
    <definition name="*/*" extends="layout">
        <put-attribute name="header" value="/WEB-INF/tiles/tile/{1}/header.jsp" />
        <put-attribute name="titlenav" value="/WEB-INF/tiles/tile/{1}/titlenav.jsp" />
        <put-attribute name="contents" value="/WEB-INF/view/{1}/{2}.jsp" />
        <put-attribute name="leftbar" value="/WEB-INF/tiles/tile/{1}/leftbar.jsp" />
    </definition>
 
</tiles-definitions>